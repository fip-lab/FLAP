instance push-your-luck_inst_mdp__02 {
    domain = push-your-luck_mdp;

    objects {
        die : { d1 };
    };

    non-fluents {
        // reward factors are independent from the die value
        VALUE_1 = 2.0;
        VALUE_2 = 2.0;
        VALUE_3 = 2.0;
        VALUE_4 = 2.0;
        VALUE_5 = 2.0;
        VALUE_6 = 2.0;
        VALUE_7 = 2.0;
        VALUE_8 = 2.0;
        VALUE_9 = 2.0;
        VALUE_10 = 2.0;

        // fair 10-sided die
        PROB_1(d1) = 0.1;
        PROB_2(d1) = 0.1;
        PROB_3(d1) = 0.1;
        PROB_4(d1) = 0.1;
        PROB_5(d1) = 0.1;
        PROB_6(d1) = 0.1;
        PROB_7(d1) = 0.1;
        PROB_8(d1) = 0.1;
        PROB_9(d1) = 0.1;
        PROB_10(d1) = 0.1;
    };

    init-state {
        ~die-value-seen_1;
    };    

    horizon = 40;

    discount = 1.0;
}
